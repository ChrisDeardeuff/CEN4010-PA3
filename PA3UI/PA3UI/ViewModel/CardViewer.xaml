<UserControl x:Class="PA3UI.ui.CardViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PA3UI.ui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
            
        <!--<local:Deed Name="DeedView"></local:Deed>
        <!-->
        <!--
        Buttons/Textbox at bottom of deed being viewed 
        !-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"> - </Button>
            <TextBox Grid.Column="1" TextAlignment="Center"></TextBox>
            <Button Grid.Column="2"> + </Button>
        </Grid>
        
    </Grid>
</UserControl>
