<UserControl x:Class="PA3UI.ui.CardHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PA3UI.ui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="White" Background="#D92427" >Owned Properties</TextBlock>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="stackPanel" DockPanel.Dock="Bottom">
                <local:Deed Grid.Row="1"></local:Deed>
                <local:Deed Grid.Row="1"></local:Deed>
                <local:Deed Grid.Row="1"></local:Deed>
                <local:Deed Grid.Row="1"></local:Deed>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
